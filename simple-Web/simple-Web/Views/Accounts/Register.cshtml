@using simple_Web.Service.Dtos
@model AccountRegisterDto
@{
    Layout = "_AccountLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation in HTML | CodingNepal</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
</head>
<body>
    <form asp-controller="accounts" asp-action="register" method="post">
        <h2>Welcome to SimpleWeb Registration</h2>
        <div class="form-group fullname">
            <label for="fullname">First Name</label>
            <input type="text" asp-for=UserName id="fullname" placeholder="Enter your first name">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group email">
            <label for="email">Email Address</label>
            <input type="text" asp-for=Email id="email" placeholder="Enter your email address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group password">
            <label for="password">Password</label>
            <input type="password" asp-for=Password id="password" placeholder="Enter your password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <i id="pass-toggle-btn" class="fa-solid fa-eye"></i>
        </div>

        <div class="form-group submit-btn">
            <input type="submit" value="Submit" asp-controller="accounts" asp-action="login">
        </div>
    </form>
</body>
</html>