@using simple_Web.Service.Dtos
@model AccountRegisterDto
@{
    Layout = "_AccountLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation in HTML | CodingNepal</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .form-group span {
                color: red;
                font-size: 12px;
                display: block;
                margin-top: 5px;
            }

            .form-group.submit-btn input {
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
            }

                .form-group.submit-btn input:hover {
                    background-color: #0056b3;
                }

        .fa-eye {
            position: relative;
            left: -30px;
            cursor: pointer;
        }

            .fa-eye:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <form asp-controller="accounts" asp-action="register" method="post">
        <h2>Welcome to SimpleWeb Registration</h2>
        <div class="form-group fullname">
            <label for="fullname">UserName</label>
            <input type="text" asp-for=UserName id="fullname" placeholder="Enter your first name">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group email">
            <label for="email">Email Address</label>
            <input type="text" asp-for=Email id="email" placeholder="Enter your email address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group password">
            <label for="password">Password</label>
            <input type="password" asp-for=Password id="password" placeholder="Enter your password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" id="kt_sign_up_submit" class="btn btn-lg btn-registan">
                <span class="indicator-label">
                    Submit
                </span>
            </button>
        </div>
    </form>
</body>
</html>