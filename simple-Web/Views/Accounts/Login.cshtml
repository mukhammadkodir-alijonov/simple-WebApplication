@using simple_Web.Service.Dtos
@model AccountLoginDto
@{
    Layout = "_AccountLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation in HTML | CodingNepal</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: sans-serif;
        }

        .limiter {
            width: 100%;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .limiter > form {
                max-width: 450px;
                width: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 10px;
                background: aliceblue;
                padding: 20px;
                border-radius: 10px;
            }

        .login100-form-title.p-b-26 {
            font-size: 20px;
            color: #333;
            padding: 20px;
        }

        .wrap-input100.validate-input {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .wrap-input100 input {
            width: 100%;
            height: 40px;
            border: 1px solid #333;
            padding: 0 10px;
            border-radius: 5px;
            outline: none;
        }

        .container-login100-form-btn {
            width: 100%;
        }

            .container-login100-form-btn button {
                width: 100%;
                height: 40px;
                background: #333;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="limiter">
        
                <form class="login100-form validate-form" asp-controller="accounts" asp-action="login" method="post">
                    <span class="login100-form-title p-b-26">
                        Welcome to SimpleWeb Log In
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is: example@gmail.com">
                        <input asp-for="Email" class="input100" type="text" name="Email"> <!-- Use tag helpers consistently -->
                        <span asp-validation-for="Email" class="focus-input100" data-placeholder="Email"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input asp-for="Password" class="input100" type="password" name="Password"> <!-- Use tag helpers consistently -->
                        <span asp-validation-for="Password" class="focus-input100" data-placeholder="Password"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Don’t have an account?
                        </span>

                        <a class="txt2" asp-controller="accounts" asp-action="register">
                            Sign Up
                        </a>
                    </div>
                </form>
            </div>
</body>
</html>
